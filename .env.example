# ===========================================
# .env (공통값 - Docker Compose + Next.js 공유)
# ===========================================

# Database (Docker PostgreSQL)
POSTGRES_USER=mbti
POSTGRES_PASSWORD=your-db-password
POSTGRES_DB=mbti_db

# App URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Kakao OAuth (public)
NEXT_PUBLIC_KAKAO_CLIENT_ID=your-kakao-rest-api-key

# ===========================================
# .env.local (비밀값 - Next.js 전용)
# ===========================================

# Database URL (includes password)
DATABASE_URL="postgresql://mbti:your-db-password@localhost:5432/mbti_db"

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET="your-jwt-secret-key-min-32-chars"
JWT_REFRESH_SECRET="your-refresh-secret-key-min-32-chars"

# Kakao OAuth Secrets (https://developers.kakao.com)
KAKAO_CLIENT_ID="your-kakao-rest-api-key"
KAKAO_CLIENT_SECRET="your-kakao-client-secret"
